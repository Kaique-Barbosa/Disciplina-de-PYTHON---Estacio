lista_produtos = []

for i in range(2):
    lista_produtos.append(input("Digite o produto:").upper())


for produtos in lista_produtos:
    print(f"Produto: {produtos}")


total = 0
preco = 1

while preco > 0:
    preco = float(input("Digite o pre√ßo: \n"))
    
    total += preco
    
print(f"Total a pagar R${total}")

